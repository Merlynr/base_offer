{
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "chrome 调试",
      "url": "http://localhost:5500",
      "webRoot": "${workspaceFolder}"
    },
    {
      "command": "yarn start",
      "name": "Run yarn start",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "name": "Launch Chrome",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:5758",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Attach to Chrome",
      "port": 5758,
      "request": "attach",
      "type": "chrome",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "env": { "RUN_TYPE": "prod" }
    },
    {
      "type": "pwa-msedge",
      "request": "launch",
      "name": "Launch Microsoft Edge and open the Edge DevTools",
      "url": "http://localhost:5758",
      "webRoot": "${workspaceFolder}"
    }
  ]
}
